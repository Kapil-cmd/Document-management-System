@model ASP.NETCoreIdentityCustom.Models.DocumentEntity
@using Microsoft.AspNetCore.Identity
@using ASP.NETCoreIdentityCustom.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Create";
}
<h2 style="color:black; font-style:inherit"  align="center">Document Management System</h2>
<hr />
<div class="row">
    <div class="col-md-4 col-md-offset-2">
        <section>

       
         <div class="col-4 text-end">
            <a asp-controller="Document" asp-action="Index" class="btn btn-outline-primary">
                View Your  List
            </a>
            <hr />
        </div>
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input  asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="DocumentName" class="control-label"></label>
                <input asp-for="DocumentName" class="form-control" />
                <span asp-validation-for="DocumentName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="DocumentCreaterName" class="control-label"></label>
                :&nbsp;@UserManager.GetUserName(User)

            </div>
            <br />
            <div class="form-group">
                <label asp-for="Discription" class="control-label"></label>
                <textarea rows="7" asp-for="Discription" class="form-control" ></textarea>
                <span asp-validation-for="Discription" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="DocumentCreatedDate" class="control-label"></label>
                <input type='text' value='@DateTime.Now.ToString()'/>
                <span asp-validation-for="DocumentCreatedDate" class="text-danger"></span>
                
            </div>
             <br />
                 <div class="form-group">
                    <label asp-for="DocumentFiles" class="control-label"></label>
                    <input multiple asp-for="DocumentFiles" accept="image/*"/>
                    <span asp-validation-for="DocumentFiles" class="text-danger"></span>
                </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-primary" />
            </div>
            <br />
            <div>
               <a asp-action="Index" class="btn btn-outline-danger">Back to List</a>
           </div>
        </form>
         </section>
    </div>

     <div class="col-md-6">
        <section> 
            <h3 align="center" style="font-style:inherit">Create Your Documents Here </h3>
            <hr />
           
                    <div>
                        <p>
                          Document Management System is the best place to upload ,read the documents and research.
                        </p>
                    </div>
                            <img src="~/Image/dss.jpg" asp-append-version="true" width="700px" height="550px"/>
        </section>
    </div>
</div>

@section Scripts {
    
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
   
}
