@model ASP.NETCoreIdentityCustom.Entity.Role
@{
    ViewData["Title"] = "Create";
}
<h1 align="center" style="color:black">Send Request For Admin For Your Role Promotion</h1>
<hr />
<a asp-controller="RoleViews" asp-action="Index" class="btn btn-outline-danger">Back to home</a>
<br />
<br />
@if(User.IsInRole("Manager"))
{
    <div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RequiredRole" class="control-label"></label>
                <select id="select1" asp-for="RequiredRole">
                    <option selected disabled>--Select Role Which You Want--</option>
                    <option>Admin</option>
                </select>
                <span asp-validation-for="RequiredRole" class="text-danger"></span>
            </div>
            <hr />
            <hr />
            <br />
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-outline-success" />
            </div>
            <h4 style="color:indianred">@ViewBag.message </h4>
        </form>
    </div>
    </div>
}
else
{
   <div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RequiredRole" class="control-label"></label>
                <select id="select1" asp-for="RequiredRole">
                    <option selected disabled>--Select Role Which You Want--</option>
                    <option>Manager</option>
                </select>
                <span asp-validation-for="RequiredRole" class="text-danger"></span>
            </div>
            <hr />
            <hr />
            <br />
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-outline-success" />
            </div>
            <h4 style="color:indianred">@ViewBag.message </h4>
        </form>
    </div>
    </div>
}


